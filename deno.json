{
  "name": "@tettuan/breakdownlogger",
  "version": "1.1.1",
  "exports": {
    ".": "./mod.ts",
    "./logger": "./src/logger.ts",
    "./docs": "./src/docs_cli.ts",
    "./validate": "./src/validate_cli.ts"
  },
  "description": "A debug logging library for Deno applications, designed for use in test environments with configurable levels and filtering",
  "repository": "https://github.com/tettuan/breakdownlogger",
  "keywords": [
    "deno",
    "logging",
    "debug",
    "test",
    "development",
    "typescript",
    "jsr"
  ],
  "author": "tettuan",
  "license": "MIT",
  "imports": {
    "std/": "https://deno.land/std@0.220.1/"
  },
  "tasks": {
    "test": "deno test --allow-env",
    "publish:dry": "deno publish --dry-run --allow-dirty",
    "ci": "deno run --allow-read --allow-write --allow-run --allow-env jsr:@aidevtool/ci",
    "ci:dirty": "deno run --allow-read --allow-write --allow-run --allow-env jsr:@aidevtool/ci --allow-dirty",
    "docs": "deno doc --html --name=\"BreakdownLogger\" mod.ts",
    "docs:json": "deno doc --json mod.ts",
    "bump-version": "deno run --allow-read --allow-write --allow-run scripts/bump_version.ts"
  },
  "lint": {
    "rules": {
      "tags": ["recommended"],
      "include": [
        "ban-untagged-todo",
        "camelcase",
        "default-param-last",
        "eqeqeq",
        "explicit-function-return-type",
        "explicit-module-boundary-types",
        "guard-for-in",
        "no-await-in-loop",
        "no-boolean-literal-for-arguments",
        "no-const-assign",
        "no-eval",
        "no-implicit-declare-namespace-export",
        "no-inferrable-types",
        "no-non-null-asserted-optional-chain",
        "no-non-null-assertion",
        "no-self-compare",
        "no-slow-types",
        "no-sparse-arrays",
        "no-sync-fn-in-async-fn",
        "no-throw-literal",
        "no-top-level-await",
        "no-undef",
        "no-useless-rename",
        "single-var-declarator",
        "triple-slash-reference",
        "verbatim-module-syntax"
      ]
    }
  },
  "publish": {
    "include": [
      "mod.ts",
      "src/**/*.ts",
      "README.md",
      "LICENSE",
      "docs/usage.md",
      "docs/usage.ja.md",
      ".claude/skills/implement-logger/SKILL.md",
      ".claude/skills/debug-with-logger/SKILL.md"
    ],
    "exclude": [
      "coverage_dir/",
      "tmp/",
      "drafts/",
      "scripts/",
      "examples/",
      "tests/",
      "**/*_test.ts",
      "**/*.test.ts",
      "debug_*.ts",
      "*.md",
      "!README.md"
    ]
  }
}
